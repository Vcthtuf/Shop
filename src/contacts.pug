    body
        .container
            nav
                ul.menu
                    li.item
                        a(href="index.html") Главная
                    li.item
                        a(href="catalog.html") Каталог
                    li.item
                        a(href="#") Контакты
            hr
            .main
                section.anketa
                    h2 Напишите нам
                    form(action="#")
                        .item.name
                            .item_title Имя &nbsp;
                                span *
                            .item_field
                                input(type="text" placeholder="Ваше имя")
                        .item.mail
                            .item_title Email &nbsp;  
                                span *
                            .item_field
                                input(type="text" placeholder="Электронная почта")
                        .item.theme
                            .item_title Тема
                            .item_field
                                input(type="text" placeholder="Тема сообщения")
                        .item.text
                            .item_title Текст сообщения
                            .item_field
                                textarea(name="anketa", placeholder="Ваше сообщение")
                        .button
                            input.btn.submit(type="submit" value="Отправить")
                            input.btn.reset(type="reset" value="Сброс")
                section.contact
                    h2 Адрес
                    ul
                        li.phone
                            .title.phone Телефон:
                            .value.phone
                                a(href="tel:+7999999999") +7999999999
                        li.address 
                            .title.address Адрес:
                            .value.address Москва, Кремль
                        li.mail
                            .title.mail Email:
                            .value.mail
                                a(href="mailto:1234567890@gmail.com") 1234567890@gmail.com
                        li.about
                            .title.about О нас:
                            .value.about The Best - лучший магазин ноутбуков
